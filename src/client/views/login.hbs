            {{/if}}
            <form action="/login" method="POST" id="form">
                <h2>Email Login</h2>
                <div class="login-input">
                    <input type="email" placeholder="Enter email" name="email" required>
                </div>
                <div class="password-input">
                    <input type="password" placeholder="Enter password" name="password" id="password">
                    <i class="fas fa-eye" id="togglePassword"></i>

                </div>
                <div class="otp-div">
                    <a href="phone-login">Login with OTP</a>

                    <button id="forgotpassword">Forgot Password</button>
                </div>
                <button class="secondary-bttn-dark" type="submit">LOGIN <i class="fas fa-arrow-right"></i></button>
                <p>Not registered? <a href="signup">Sign Up</a></p>



            </form>

            <h5>All Rights Reserved. Â© tvastra 2020 </h5>

        </section>
    </main>
    <script>
        const togglePassword = document.querySelector('#togglePassword');
        const password = document.querySelector('#password');
        const forgotpassword = document.querySelector("#forgotpassword");
        const form = document.querySelector("#form");
        togglePassword.addEventListener('click', function (e) {
            // toggle the type attribute
            const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
            password.setAttribute('type', type);
            // toggle the eye slash icon
            this.classList.toggle('fa-eye-slash');
        });



        forgotpassword.addEventListener('click', (e) => {
            const action = "/reset-password"
            form.setAttribute('action', action);
        })


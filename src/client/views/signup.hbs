    <main>
        <section>

            <form action="/signup" method="POST">
                <h2>
                    Sign Up
                </h2>
                <input type="text" placeholder="Enter Name" name="name">
                <input type="email" placeholder="Enter Email" name="email">
                <input type="password" placeholder="Enter Password" name="password">
                <select id="gender" name="gender">

                    <option selected="selected">Select Your Gender</option>
                    <option>Male</option>
                    <option>Female</option>


                </select>
                <input type="date" placeholder="dd/mm/yyyy" name="date" style="color: rgb(139, 139, 139);">
                <input type="number" placeholder="Enter Mobile Number" name="pnumber">

                <input type="text" class="city" placeholder="Enter City" name="city">
                <input type="text" class="state" placeholder="Enter State" name="state">
                <select id="gender" name="country">

                    <option selected="selected">Select Your Country</option>
                    <option>India</option>
                    <option>Finland</option>

                </select>
                <div class="isDoctorClass">
                    <input type="checkbox" name="isDoctor" class="isDoctor">
                    <label for="isDoctor">Is Doctor ?</label>
                </div>
                <button class="secondary-bttn-dark" type="submit" value="Signup">SIGN UP <i
                        class="fas fa-arrow-right"></i></button>
                <p>Already Registered? <a href=".">Login</a></p>
            </form>

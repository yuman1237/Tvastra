        function hidemsg() {
            document.querySelector(".alert-message").style.display = "none";
        }
        setTimeout("hidemsg()", 3000);
    </script>

</head>

<body>
    <nav>
        <a href="."> <img src="https://s3.ap-south-1.amazonaws.com/appdev.konfinity.com/css/tasks/Logo.jpg"
                alt="tvastra-logo"></a>
        <div class="nav-links">
            <a href="">Doctor</a>

            <a href="">Hospital</a>

            <a href="">Treatment</a>


            <a href="">About</a>

        </div>
        <div class="nav-buttns">


            <button class="secondary-bttn-dark">Get a Qoute</button>

        </div>
        <i class="fas fa-bars"></i>
    </nav>
    <main>
        <section>
            {{#if message4.length}}
            <div class="alert-message">
                <i class="fas fa-exclamation-circle"></i>
                <div class="msg-paras">
                    <p class="message-para main-message">{{messageInfo}}</p>
                    <p class="message-para">{{message4}}</p>
                </div>
                <span id="closebttn" style="cursor: pointer;"
                    onclick="this.parentElement.style.display='none';">&times;</span>
            </div>

            {{/if}}
            {{#if message5.length}}
            <div class="alert-message1">
                <i class="fas fa-times-circle"></i>
                <div class="msg-paras">
                    <p class="message-para main-message">{{messagefail}}</p>
                    <p class="message-para">{{message5}}</p>
                </div>
                <span id="closebttn" style="cursor: pointer;"
                    onclick="this.parentElement.style.display='none';">&times;</span>
            </div>

            {{/if}}
            <form action="/otp" method="POST">
                <h2>OTP</h2>
                <p>We have sent One Time Password(OTP) to your registered Phone Number</p>
                <input id="partitioned" type="text" maxlength="4" name="otpnumber" autocomplete="off" />


                <button class="secondary-bttn-dark" type="submit">SUBMIT<i class="fas fa-arrow-right"></i></button>

            </form>
            <div id="resend">

            </div>
            <h5>All Rights Reserved. Â© tvastra 2020 </h5>
        </section>
    </main>

    <script>
        var resend = document.getElementById('resend');
        var timeLeft = 60;
        var timerId = setInterval(countdown, 1000);
        function countdown() {
            if (timeLeft == -1) {
                clearTimeout(timerId);
                resend.innerHTML = "<form action='/otp/123456' method='POST'> <input type='number' value={{number}} name='pnumber' style='display:none'/><button  type='submit'>Resend OTP</button> </form>";

            } else {
                resend.innerHTML = 'Resend in ' + '<span>' + timeLeft + '</span>';
                timeLeft--;
            }
        }
    </script>

</body>

</html>